# ===== API KEYS =====
# IMPORTANTE: Reemplaza con tu propia API key de OpenWeather
# Obtén una gratis en: https://openweathermap.org/api
OPENWEATHER_API_KEY=tu_api_key_aqui

# ===== BASE DE DATOS =====
DATABASE_URL=sqlite:///./inversor.db

# ===== UBICACIÓN =====
# Bahía Blanca, Argentina (ejemplo)
LATITUDE=-38.7183
LONGITUDE=-62.2663

# ===== CAPACIDADES DEL SISTEMA =====
BATTERY_CAPACITY_WH=5000
MAX_SOLAR_POWER_W=3000
MAX_WIND_POWER_W=2000
MIN_BATTERY_SOC=20
MAX_BATTERY_SOC=100

# ===== SERVIDOR =====
HOST=0.0.0.0
PORT=8801

# ===== MODO SIMULACIÓN =====
# true = Datos simulados | false = Datos reales de ESP32
SIMULATION_MODE=false

# ===== CONSUMO PROMEDIO =====
AVERAGE_HOUSE_CONSUMPTION_W=650

# ===== MACHINE LEARNING =====
ENABLE_PATTERN_LEARNING=true
PATTERN_LEARNING_DAYS=30
